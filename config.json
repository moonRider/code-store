{
  "server": {
    "port": 4000,
    "sourceDir": "build",
    "serverFile": "./server/server.coffee",
    "custom": true,
    "watch": "server/**/*.coffee"
  },
  "test": {
    "sourceDir": "test",
    "files": "/**/*.coffee",
    "options": {
      "reporter": "dot",
      "ui": "bdd"
    }
  },
  "sass": {
    "sourceDir": "assets/sass",
    "dest": "./build",
    "watch": "/**/*.scss",
    "compile": "/*.scss",
    "options": {
      "outputStyle": "expanded"
    }
  },
  "coffee": {
    "sourceDir": "assets/script",
    "dest": "./build",
    "watch": "/**/*.coffee",
    "compile": "/**/*.coffee",
    "options": {
      "bare": true
    }
  },
  "jade": {
    "sourceDir": "assets/jade",
    "dest": "./build",
    "watch": "/**/*.jade",
    "compile": "/*.jade",
    "options": {
      "pretty": true
    }
  },
  "slim": {
    "sourceDir": "/assets/slim",
    "dest": "/build",
    "watch": "/**/*.slim",
    "compile": "/*.slim",
    "options": {}
  }
}